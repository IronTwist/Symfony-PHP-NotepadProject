{% extends "base.html.twig" %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <div>Id-ul pentru aceasta postare este {{ post.id }}</div>
    <div>
        <img src="{{ '../../uploads/' ~ post.image }}" width="300" alt="{{ post.image }}" >
    </div>
    <div>
        <span>Category: {{ post.category }}</span>
    </div>
{% endblock %}